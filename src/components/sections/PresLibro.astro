---
// src/components/BioShowcase.astro
interface Props {
  name?: string;
  bio: string;
  headshotSrc: ImageMetadata;
  bookSrc?: ImageMetadata;
  headshotAlt?: string;
  bookAlt?: string;
}

const {
  name = "Dr. Jorge Luis Salazar Soplapuco",
  bio,
  headshotSrc,
  headshotAlt = "Retrato de " + name,
} = Astro.props as Props;
---

<section
  class="w-full py-large"
  style={`background: var(--color-background);`}
  aria-labelledby={`bio-${name.replaceAll(' ', '-').toLowerCase()}`}
>
  <div class="site-container max-w-[var(--container-base)] px-6 mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6 items-start">
        <!-- Texto SOLO en secciÃ³n verde -->
      <div class="md:col-span-10">
        <div
          class="rounded-[1rem] p-6 md:p-8 shadow-sm"
          style="background: var(--color-accent);"
        >
          <p class="text-[var(--color-background-light)] leading-relaxed text-balance">
            {bio}
          </p>
        </div>
      </div>
      <!-- Foto -->
      <figure class="md:col-span-2 place-self-start">
        <img
          src={headshotSrc.src}
          alt={headshotAlt}
          class="w-48 h-48 md:w-56 md:h-56 object-cover rounded-[1rem] shadow-md border border-black/10 bg-[var(--color-background-light)]"
          loading="lazy"
        />
      </figure>

      
    </div>
  </div>
</section>
